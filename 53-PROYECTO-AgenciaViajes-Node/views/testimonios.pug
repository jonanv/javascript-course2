extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mb-1 #{ pagina }

        .row 

            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonio

                if(errores)
                    each error in errores
                        .alert.alert-danger.col.text-center #{ error.mensaje }

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonios", method="POST")
                        .form-group
                            label(for="nombre") Nombre:
                            input#nombre.form-control(type="text", name="nombre", placeholder="Nombre" value= nombre)
                        .form-group
                            label(for="correo") Correo Electrónico:
                            input#correo.form-control(type="email", name="correo", placeholder="Correo Electrónico" value= correo)
                        .form-group
                            label(for="mensaje") Mensaje:
                            textarea#mensaje.form-control(name="mensaje", rows="3", placeholder="mensaje")= mensaje

                        button.btn.btn-success.btn-block(type="submit") Enviar
